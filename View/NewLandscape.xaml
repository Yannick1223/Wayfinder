<Window x:Class="Wayfinder.View.NewLandscape"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wayfinder.View"
        xmlns:viewModel="clr-namespace:Wayfinder.ViewModel"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        d:DataContext="{d:DesignInstance Type=viewModel:GenerateNewLandscapePopupViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="480" Width="270">
    <StackPanel>
        <TextBlock Text="Neue Landschaft erstellen" Margin="0 0 0 40"></TextBlock>
        <TextBlock Text="Breite: "></TextBlock>
        <xctk:SingleUpDown Minimum="1" Maximum="150" Value="{Binding Rows}"></xctk:SingleUpDown>
        <TextBlock Text="Höhe: "></TextBlock>
        <xctk:SingleUpDown Minimum="1" Maximum="150" Value="{Binding Columns}"></xctk:SingleUpDown>
        <Button Content="Neu erstellen" Command="{Binding SubmitCommand}"></Button>
        <Button Content="Abbrechen" Command="{Binding CancelCommand}"></Button>
    </StackPanel>
</Window>
